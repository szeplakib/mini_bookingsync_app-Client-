<% provide(:title, 'Book') %>
<h1>Book!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@booking, url: new_booking_path, html: {class: "center"}) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :start_at %>
      <br />
      <%= f.date_select(:start_at, order: [:month, :day, :year]) %>
      <br />
      <%= f.label :end_at %>
      <br />
      <%= f.date_select(:end_at, order: [:month, :day, :year]) %>
      <br />
      <%= f.label "rental id" %>
      <%= f.text_field :rental_id, class: 'form-control' %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit 'Book me, please!', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>