<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Reserved by</th>
      <th>From</th>
      <th>To</th>
      <th>Rental ID</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.sort_by{ |element| element['client_email'] }.each do |booking| %>
    <tr>
      <td>          
        <%= booking['client_email'] %>          
      </td>
      <td>          
        <%= booking['start_at'][0..9] %>          
      </td>
      <td>          
        <%= booking['end_at'][0..9]%>          
      </td>
      <td>          
        <%= booking['rental_id']%>          
      </td>
      <td>
        <%= booking['price']%>
      </td>
      <td>
          <div class="pull-right">
            <%= link_to "Show booking", "/rentals/#{booking['rental_id']}/bookings/#{booking['id']}", class: "btn btn-sm btn-primary", method: :get %>
            <%= link_to "Edit", "/rentals/#{booking['rental_id']}/bookings/#{booking['id']}/edit", class: "btn btn-sm btn-primary", method: :get %>
            <%= link_to "Remove", "/rentals/#{booking['rental_id']}/bookings/#{booking['id']}", class: "btn btn-sm btn-primary", method: :delete %>
          </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>