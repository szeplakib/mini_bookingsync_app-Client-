<div class="jumbotron rounded-0">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Daily rate</th>
        <th>Edit?</th>
        <th>Remove?</th>
      </tr>
    </thead>
    <tbody>
      <% @rentals.each do |rental| %>
        <tr>
          <td>          
            <%= rental['name'] %>          
          </td>
          <td>          
            <%= rental['daily_rate'].to_s + ' USD' %>          
          </td>
          <td>
          <%= link_to "Edit!", "/rentals/#{rental['id']}/edit", method: :get %>
          </td>
          <td>
          <%= link_to "Remove!", "/rentals/#{rental['id']}", method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>